<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.InfoFragment"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/tv_contacts_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Контакты"
            />

        <TextView
            android:id="@+id/tv_contacts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_contacts_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:autoLink="email"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="18sp"
            android:text="Шарлыкское шоссе, д. 1/2, мегамолл «Армада» (вход через галерею №1 и №2)\nmfc@mail.orb.ru"
            />

        <TextView
            android:id="@+id/tv_contacts_business"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_contacts"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:autoLink="email"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="18sp"
            android:text="МФЦ для бизнеса:\nШарлыкское шоссе, 1/2 (6 галерея мегамолла «Армада», центр «Мой бизнес»)\nmfc@mail.orb.ru"
            />

        <TextView
            android:id="@+id/tv_call_centre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_contacts_business"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Call-центр"
            />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_call_centre"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:autoLink="email"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="20sp"
            android:text="8 (3532) 480-480"
            />

        <TextView
            android:id="@+id/tv_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_phone"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Часы работы"
            />

        <TextView
            android:id="@+id/tv_monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_hours"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="18sp"
            android:text="Понедельник"
            />

        <TextView
            android:id="@+id/tv_monday_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_monday"
            app:layout_constraintBottom_toBottomOf="@id/tv_monday"
            app:layout_constraintStart_toEndOf="@id/tv_monday"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="18sp"
            android:text="8.30 - 20.30"
            />

        <TextView
            android:id="@+id/tv_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_monday"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="18sp"
            android:text="Вторник"
            />

        <TextView
            android:id="@+id/tv_tuesday_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_tuesday"
            app:layout_constraintBottom_toBottomOf="@id/tv_tuesday"
            app:layout_constraintStart_toStartOf="@+id/tv_monday_hours"
            android:layout_marginEnd="16dp"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="18sp"
            android:text="8.00 - 20.00"
            />

        <TextView
            android:id="@+id/tv_wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_tuesday"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="18sp"
            android:text="Среда"
            />

        <TextView
            android:id="@+id/tv_wednesday_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_wednesday"
            app:layout_constraintBottom_toBottomOf="@id/tv_wednesday"
            app:layout_constraintStart_toStartOf="@+id/tv_tuesday_hours"
            android:layout_marginEnd="16dp"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="18sp"
            android:text="8.30 - 20.30"
            />

        <TextView
            android:id="@+id/tv_thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_wednesday"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="18sp"
            android:text="Четверг"
            />

        <TextView
            android:id="@+id/tv_thursday_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_thursday"
            app:layout_constraintBottom_toBottomOf="@id/tv_thursday"
            app:layout_constraintStart_toStartOf="@+id/tv_wednesday_hours"
            android:layout_marginEnd="16dp"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="18sp"
            android:text="8.30 - 20.30"
            />

        <TextView
            android:id="@+id/tv_friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_thursday"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="18sp"
            android:text="Пятница"
            />

        <TextView
            android:id="@+id/tv_friday_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_friday"
            app:layout_constraintBottom_toBottomOf="@id/tv_friday"
            app:layout_constraintStart_toStartOf="@+id/tv_thursday_hours"
            android:layout_marginEnd="16dp"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="18sp"
            android:text="8.30 - 20.30"
            />

        <TextView
            android:id="@+id/tv_saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_friday"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="18sp"
            android:text="Суббота"
            />

        <TextView
            android:id="@+id/tv_saturday_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_saturday"
            app:layout_constraintBottom_toBottomOf="@id/tv_saturday"
            app:layout_constraintStart_toStartOf="@+id/tv_friday_hours"
            android:layout_marginEnd="16dp"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="18sp"
            android:text="8.30 - 17.30"
            />

        <TextView
            android:id="@+id/tv_sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_saturday"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="18sp"
            android:text="Воскресенье"
            />

        <TextView
            android:id="@+id/tv_sunday_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tv_sunday"
            app:layout_constraintBottom_toBottomOf="@id/tv_sunday"
            app:layout_constraintStart_toStartOf="@+id/tv_saturday_hours"
            android:layout_marginEnd="16dp"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="18sp"
            android:text="Выходной"
            />

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_sunday"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:textAlignment="textStart"
            android:textColor="@color/brown_700"
            android:textSize="18sp"
            android:text="Обслуживание заявителей заканчивается за 30 минут до окончания рабочего времени"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>