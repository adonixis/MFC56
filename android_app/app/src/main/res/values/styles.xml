<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MFC56.Button" parent="Widget.AppCompat.Button">
    </style>

    <style name="Theme.MFC56.Button.Auth" parent="Theme.MFC56.Button">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/product_sans_bold</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.MFC56.Button.Auth.Facebook" parent="Theme.MFC56.Button.Auth">
        <item name="android:background">@drawable/bg_btn_facebook_blue</item>
    </style>

    <style name="Theme.MFC56.Button.Auth.Google" parent="Theme.MFC56.Button.Auth">
        <item name="android:background">@drawable/bg_btn_google_red</item>
    </style>

    <style name="Theme.MFC56.Button.Yellow" parent="Theme.MFC56.Button">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">@font/product_sans_bold</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/bg_btn_brown</item>
    </style>

</resources>